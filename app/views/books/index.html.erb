<div class="container">

  <% if @book.errors.any? %>
    <div id="errorm">
      <h3><%= @book.errors.count %>error prohibited this obj from being saved</h3>
      <% @book.errors.full_messages.each do |message| %>
        <ul>
          <li><%= message %></li>
        </ul>
      <% end %>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-3">
      <%= render 'users/list', user: current_user, book: Book.new %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
        <table class="table table-hover">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="2"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user_id) do %>
                <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %>
                <% end %>
              </td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
              <td>
                <div id="favorites_<%= book.id %>">
                  <%= render 'favorites/favorite', book: book %>
                </div>
              </td>
              <td>
                <span>コメント数:<%= book.book_comments.count %></span>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>